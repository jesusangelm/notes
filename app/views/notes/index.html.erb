<h1>Nota Nueva</h1>

<%= render "form" %>

<h1>Mis notas</h1>
<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Titulo</th>
    <th>Contenido</th>
    <th colspan="2">Opciones</th>
  </tr>

    <% @notes.each do |note| %>
      <tr>
      <td><%= note.title %></td>
      <td><%= to_markdown(note.body.truncate(150)) %></td>
      <td><%= link_to 'Mostrar', note_path(note) %></td>
      <td><%= link_to 'Eliminar', note, method: :delete,
        data: { confirm: "Seguro?" } %></td>
    </tr>
  <% end %>
</table>
