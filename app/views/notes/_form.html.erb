<h1>Crear nota nueva</h1>
  <%= form_for :note, url: notes_path,
                      html: { class: "form-horizontal", role: "form" },
                      remote: true  do |f| %>

    <div class="form-group">
      <p>
        <%= f.text_field :title, class: "form-control",
                                 placeholder: "Titulo" %>
      </p>

      <p>
        <%= f.text_area :body, size: "60x5",
                              class: "form-control",
                        placeholder: "Contenido: Markdown es bienvenido!!!" %>
      </p>

      <p>
        <%= f.submit "Guardar", class: "btn btn-primary" %>
      </p>
    </div>
  <% end %>
